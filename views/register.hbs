<div class="registerPage">
  <div class="register d-flex flex-column align-items-center">
    <h2 class="col-1 mt-3" style="font-size: 40px;">Register</h2>
    <div class="login-form d-flex flex-column align-items-center col-6 mb-5 mt-5">
      <form action="/users/login" method="post" class="col-8">
        <div class="mb-3 row">
          <label for="name" class="col-sm-3 col-form-label">Name:</label>
          <div class="col-sm-8">
            <input type="text" id="name" name="name" class="form-control" required>
          </div>
        </div>
        <div class="mb-3 row">
          <label for="email" class="col-sm-3 col-form-label">Email:</label>
          <div class="col-sm-8">
            <input type="text" id="email" name="email" class="form-control" required>
          </div>
        </div>
        <div class="mb-3 row">
          <label for="password" class="col-sm-3 col-form-label">Password:</label>
          <div class="col-sm-8">
            <input type="text" id="password" name="password" class="form-control" required>
          </div>
        </div>
        <div class="mb-3 row">
          <label for="confirmPassword" class="col-sm-3 col-form-label">Confirm<br>Password:</label>
          <div class="col-sm-8">
            <input type="text" id="confirmPassword" name="confirmPassword" class="form-control" required>
          </div>
        </div>
        <din class="button d-flex flex-column align-items-center">
          <div class="mb-3">Already Have account?<a href="/users/login">Login</a></div>
          <button type="submit" class="btn btn-primary">Register</button>
        </din>
      </form>
    </div>
  </div>
</div>