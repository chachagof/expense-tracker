<div class="expense-new d-flex justify-content-center">
  <div class="expense-form d-flex flex-column align-items-center col-6 mb-5 mt-5">
    <h2 class="mb-4">請輸入你的支出</h2>
    <div class="form-container col-7">
      <form action="/expense/new" method="post">
        <div class="mb-4 row">
          <label for="name" class="col-sm-2 col-form-label">名稱:</label>
          <div class="col-sm-10">
            <input type="text" id="name" name="name" class="form-control" required>
          </div>
        </div>
        <div class="mb-4 row">
          <label for="date" class="col-sm-2 col-form-label">日期:</label>
          <div class="col-sm-10">
            <input type="date" id="date" name="date" class="form-control" required>
          </div>
        </div>
        <div class="mb-4 row">
          <label for="category" class="col-sm-2 col-form-label">類別:</label>
          <div class="col-sm-10">
            <select class="form-select" id="category" name="category" required>
              <option value="">請選擇</option>
              <option value="1">家居物業</option>
              <option value="2">交通出行</option>
              <option value="3">休閒娛樂</option>
              <option value="4">餐飲食品</option>
              <option value="5">其他</option>
            </select>
          </div>
        </div>
        <div class="mb-4 row">
          <label for="amount" class="col-sm-2 col-form-label">金額:</label>
          <div class="col-sm-10">
            <input type="number" id="amount" name="amount" class="form-control" min="0" max="99999999" required>
          </div>
        </div>
        <div class="mb-3 d-flex justify-content-center">
          <button type="submit" class="btn btn-success">新增支出</button>
        </div>
      </form>
    </div>
  </div>
</div>