<div class="expense-new d-flex justify-content-center">
  <div class="expense-form d-flex flex-column align-items-center col-6 mb-5 mt-5">
    <h2 class="mb-4">請修改你的支出</h2>
    <div class="form-container col-7">
      <form action="/expense/{{expense._id}}?_method=PUT" method="post">
        <div class="mb-4 row">
          <label for="name" class="col-sm-2 col-form-label">名稱:</label>
          <div class="col-sm-10">
            <input type="text" id="name" name="name" class="form-control" value="{{expense.name}}" required>
          </div>
        </div>
        <div class="mb-4 row">
          <label for="date" class="col-sm-2 col-form-label">日期:</label>
          <div class="col-sm-10">
            <input type="date" id="date" name="date" class="form-control" value="{{expense.date}}" required>
          </div>
        </div>
        <div class="mb-4 row">
          <label for="category" class="col-sm-2 col-form-label">類別:</label>
          <div class="col-sm-10">
            <select class="form-select" id="category" name="category" required>
              <option value="">類別</option>
              <option value="1" {{#select expense.category 1}}selected{{/select}}>家居物業</option>
              <option value="2" {{#select expense.category 2}}selected{{/select}}>交通出行</option>
              <option value="3" {{#select expense.category 3}}selected{{/select}}>休閒娛樂</option>
              <option value="4" {{#select expense.category 4}}selected{{/select}}>餐飲食品</option>
              <option value="5" {{#select expense.category 5}}selected{{/select}}>其他</option>
            </select>
          </div>
        </div>
        <div class="mb-4 row">
          <label for="amount" class="col-sm-2 col-form-label">金額:</label>
          <div class="col-sm-10">
            <input type="number" id="amount" name="amount" class="form-control" min="0" max="99999999"
              value="{{expense.amount}}">
          </div>
        </div>
        <div class="mb-3 d-flex justify-content-center">
          <button type="submit" class="btn btn-success">修改支出</button>
        </div>
      </form>
    </div>
  </div>
</div>