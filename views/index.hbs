<div class="indexBox mt-3">
  <div class="container col-6 d-flex flex-column justify-content-center mt-5">
    {{!-- sort --}}
    {{> message}}
    <form action="/sort" method="post">
      <div class="sortForm d-flex">
        <select type="submit" class="form-select" name="categoryId">
          <option selected>類別</option>
          <option value="1">家居物業</option>
          <option value="2">交通出行</option>
          <option value="3">休閒娛樂</option>
          <option value="4">餐飲食品</option>
          <option value="5">其他</option>
        </select>
        <button type="submit" class="btn btn-info col-2">分類</button>
      </div>
    </form>
    {{!-- total amount --}}
    <div class="totalAmountContainer mt-5 d-inline-flex">
      <div class="col-4">
        <p style="font-size:24px;"><strong>總金額:</strong></p>
      </div>
      <div class="col-8 amount">
        <p id="totalAmount" style="font-size:42px;">0</p>
      </div>
    </div>
    {{!-- detail --}}
    {{#each expense }}
    <div class="detailContainer mt-3 mb-3 ">
      <div class="detail d-flex justify-content-between align-items-center">
        <i class="{{ this.icon }}" style="font-size: 40px;color:rgb(26, 86, 225);"></i>
        <div class="items flex-column col-6 bg-light text-dark">
          <div class="item" style="font-size: 25px;">{{this.name}}</div>
          <div class="datetime" style="font-size: 10px;">{{this.date}}</div>
        </div>
        <div class="price col-2 bg-light text-dark" style="font-size: 40px;">{{this.amount}}</div>
        <div class="modify d-flex align-items-center">
          <a href="/expense/{{this._id}}/edit" class="btn btn-outline-primary me-2">
            <i class="fa-solid fa-circle-info" style="font-size: 20px;"></i>
          </a>
          <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#delete">
            <i class="fa-solid fa-trash-can" style="font-size: 20px;"></i>
          </button>
        </div>
      </div>
    </div>
    {{!-- modal --}}
    <div class="modal fade" id="delete" tabindex="-1" aria-labelledby="modal" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">
              Are you sure you want to <strong>delete</strong> this amount?
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="detail d-flex justify-content-between align-items-center">
              <i class="{{ this.icon }}" style="font-size: 40px;color:rgb(26, 86, 225);"></i>
              <div class="items flex-column col-6 bg-light text-dark">
                <div class="item" style="font-size: 25px;">{{this.name}}</div>
                <div class="datetime" style="font-size: 10px;">{{this.date}}</div>
              </div>
              <div class="price col-2 bg-light text-dark" style="font-size: 40px;">{{this.amount}}</div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">I regret!</button>
            <form action="/expense/{{this._id}}?_method=DELETE" method="post">
              <button type="submit" class="btn btn-primary">
                Goodbye!!
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
    {{!-- create --}}
    <div class="create d-flex justify-content-center">
      <a href="/expense/new" class="btn btn-info">Create</a>
    </div>
  </div>
</div>